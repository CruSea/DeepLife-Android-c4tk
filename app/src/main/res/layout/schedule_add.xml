<?xml version="1.0" encoding="utf-8"?>

<ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="110dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >

                <TextView
                    android:id="@+id/tv_thanks"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dip"
                    android:gravity="center_horizontal"
                    android:text="@string/register_a_disciple"
                    android:textColor="@color/btn_login"
                    android:layout_marginBottom="25dp"/>

                <TextView
                    android:id="@+id/schedule_disciple_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />


                    <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/schedule_add_name"
                    android:background="@color/white"
                    android:layout_marginBottom="10dp"
                    />


                <DatePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/schedule_add_date"
                    android:layout_marginBottom="10dp"
                    />

                <TimePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/schedule_add_time_picker"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal" />


                <EditText
                    android:id="@+id/schedule_add_disc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:hint="@string/description"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/input_login"
                    android:textColorHint="@color/input_login_hint" />


                <!-- Add Button -->



                <Button
                    android:id="@+id/btn_add_disciple"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/btn_login_bg"
                    android:text="@string/add_schedule"
                    android:textColor="@color/btn_login" />


            </LinearLayout>

        </ScrollView>


